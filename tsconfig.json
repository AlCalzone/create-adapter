{
	"compileOnSave": true,
	"compilerOptions": {
		"plugins": [
			{
				"name": "@fimbul/mithotyn",
				"displayErrorsAsWarnings": true
			}
		],
		"noEmit": true,
		"noEmitOnError": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build/",
		"removeComments": false,
		"strict": true,
		"strictFunctionTypes": false,
		"resolveJsonModule": true,
		"sourceMap": false,
		"inlineSourceMap": false,
		"target": "es2017",
		"watch": false // true breaks CircleCI
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"build/**",
		"node_modules/**",
		"test/baselines/**"
	]
}
